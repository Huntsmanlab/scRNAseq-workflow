cellassign_multiple_report = '../../general/reports/cellassign_integrated/{ids_integration}/cellassign_integrated_report.html'

### archived rmarkdown path
sce_clus_report = '../../general/reports/separate_clustering/{id}/separate_clustering.html'
dimRed_report = '../../general/reports/dim_reduction/{id}/dim_reduction.html'
