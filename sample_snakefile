combined_clustering_uncorrected = '../../general/data/clustered/combined/{pair_ids}/uncorrected_seurat_object.rds'
combined_clustering_integrated = '../../general/data/clustered/combined/{pair_ids}/integrated_seurat_object.rds'

# paired dge 
paired_dge_output = '../../general/data/dge/paired_dge_basic/{pair_ids}/outputsTEST.rds',
paired_dge_basic_report = '../../general/reports/paired_dge_basic/{pair_ids}/paired_dge_basic.html'
