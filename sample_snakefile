rule seurat_to_loom:
  input: 
    sce_clus
  params: 
    cell_type_csv
  output:
    path_to_loom_file
  shell:
    "Rscript pipeline/velocity/seurat_cas.R \
    --cell_type_csv {params} \
    --sce_clus {input} \
    --path_to_loom_file {output}"
    
    

