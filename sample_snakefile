cell_type_csv = '../../general/data/cellassign/{id}/cell_types.csv' # cell assign csv
cell_cycle_csv = '../../general/data/cell_cycle/{id}/cell_cycle.csv' # cell cycle csv

# BATCH CORRECTION 
scran_corrected = '../../general/data/batch_corrected/{ids_integration}/scran_corrected.rds'
seurat_corrected = '../../general/data/batch_corrected/{ids_integration}/seurat_corrected.rds'

### archived rds path
sce_red = '../../general/data/dim_reduction/{id}/sce_red.rds'# sce after dim reduction
sce_epith = '../../general/data/epithelial_cells_only/{id}/sce.rds' # sce with epithelial cells only


# MARKDOWN REPORTS
